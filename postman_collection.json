{
  "info": {
    "name": "Habrio API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Onboarding",
      "item": [
        {
          "name": "Send OTP",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/v1/send-otp",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"\"\n}"
            }
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/v1/verify-otp",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"\",\n  \"otp\": \"\"\n}"
            }
          }
        },
        {
          "name": "Basic Onboarding",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/v1/onboarding/basic",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{access_token}}"}
            ],
            "body": {"mode": "raw", "raw": "{}"}
          }
        },
        {
          "name": "Consumer Onboarding",
          "request": {
            "method": "POST",
