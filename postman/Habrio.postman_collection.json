      "value": "http://localhost:5000"
    },
    {
      "key": "generalAccessToken",
      "value": ""
    },
    {
      "key": "consumerAccessToken",
      "value": ""
    },
    {
      "key": "consumerRefreshToken",
      "value": ""
    },
    {
      "key": "vendorAccessToken",
      "value": ""
    },
    {
      "key": "adminAccessToken",
      "value": ""
    }
  ]
}
